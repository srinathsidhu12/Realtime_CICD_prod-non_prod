pipeline {
    agent any
    environment {
        DOCKER_HUB_REPO = "srinathsidhu12/java_spring_boot_sample_app"
        IMAGE_TAG = "${BUILD_NUMBER}"
        K8S_DEPLOYMENT_NAME = "springboot-demo"
    }
    tools {
       jdk 'JDK-21'
       maven 'Maven-3.9.11'
    }
    stages {
        stage('Validate Branch') {
            steps {
                script {
                    echo "Triggered branch: ${env.BRANCH_NAME}"
                    if (env.BRANCH_NAME != 'origin/develop_non_prod') {
                        error("This non-prod pipeline runs only for 'develop_non_prod' branch")
                    }
                }
            }
        }
        stage('Checkout Code') {
            steps {
                git 'https://github.com/srinathsidhu12/Realtime_CICD_prod-non_prod.git'	
            }
        }
        stage('Maven Build') {
            steps {
                sh 'mvn clean package -DskipTests'
            }
        }

        stage('Build Docker Image') {
            steps {
                sh """
                  docker build -t ${DOCKER_HUB_REPO}:${IMAGE_TAG} .
                """
            }
        }
        stage('Push Docker Image') {
            steps {
                withCredentials([usernamePassword(
                    credentialsId: 'dockerhub-id',
                    usernameVariable: 'DOCKER_USER',
                    passwordVariable: 'DOCKER_PASS'
                )]) {
                    sh """
                      echo "${DOCKER_PASS}" | docker login -u "${DOCKER_USER}" --password-stdin
                      docker push ${DOCKER_HUB_REPO}:${IMAGE_TAG}
                    """
                }
            }
        }

        stage('Deploy to Non-prod Kubernetes') {
            steps {
                withCredentials([file(credentialsId: 'kubeconfig_nonprod', variable: 'KUBECONFIG')]) {
                    sh """
                     sed -i "s|image:.*|image: ${DOCKER_HUB_REPO}:${IMAGE_TAG}|" ./k8s/nonprod/k8s-deployment.yaml
                     kubectl apply -f ./k8s/nonprod/k8s-deployment.yaml
                     kubectl apply -f ./k8s/nonprod/k8s-service.yaml
                     kubectl rollout status deployment/${K8S_DEPLOYMENT_NAME}
                    """
                  }
             }
         }    
    }

    post {
        success {
            echo " Non-prod deployment successful: ${DOCKER_HUB_REPO}:${IMAGE_TAG}"
        }
        failure {
            echo "Non-prod Deployment failed!"
        }
    }
}

